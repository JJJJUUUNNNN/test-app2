
page{
  position: relative;
  padding-top: 10rpx;
  padding-bottom: 6.5rem;
}
.container {
		font-size: 14px;
		line-height: 24px;
}
.all .item{
		padding: 4px 0;
}
.content .title{
		font-size: 16px;
		font-weight: 500;
		color:#293452
}
.content .msg{
		display: flex;
		justify-content: space-between;
}
.content .msg .time{
		font-size: 12px;
		color:#7985A4
}
.content .person{
		font-size: 14px;
		color:#293452
}
.content .info{
		font-size: 14px;
		color:#4C587A
}
.nav-box{
		background-color: #E1E6F5;
		height: 2.75rem;
		margin: 0.75rem;
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		border-radius: 0.25rem;
		box-sizing: border-box;
}
.nav-item-active{
		background-color: #fff;
		width: 7.46rem;
		margin: 0.25rem;
		box-sizing: border-box;
		text-align: center;
		box-shadow: 0 0 0.06rem 0 #000d6114, 0 0.13rem 0.5rem 0 #000d611f;
		border-radius: 0.25rem;
		height: 2.25rem;
		line-height: 2.25rem;
		font-weight: 500;
		color:#0163F5
}
.nav-item{
		width: 7.46rem;
		margin: 0.25rem;
		box-sizing: border-box;
		text-align: center;
		border-radius: 0.25rem;
		height: 2.25rem;
		line-height: 2.25rem;
		font-weight: 500;
		color:#4C587A;
}
